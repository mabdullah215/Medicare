<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppointmentDetails">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_layout_right_text"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/img_profile"
                android:src="@drawable/img_doc_1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="100dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:id="@+id/tv_name"
                    android:text="Martin Luther"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:id="@+id/tv_distance"
                    android:textColor="#b2b2b2"
                    android:text="0.31 mi away-Dentist"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <me.zhanghai.android.materialratingbar.MaterialRatingBar
                        android:layout_width="80dp"
                        android:id="@+id/material_rating"
                        android:maxHeight="18dp"
                        android:saveEnabled="false"
                        android:numStars="5"
                        android:rating="5"
                        android:stepSize="1"
                        android:isIndicator="true"
                        app:mrb_progressTint="#FFC969"
                        android:layout_alignParentRight="true"
                        style="@style/Widget.MaterialRatingBar.RatingBar"
                        android:layout_height="28dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="21 reviews"
                        android:id="@+id/tv_reviews"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:drawableLeft="@drawable/ic_clock"
                    android:text="9:30 AM-2:00 PM"
                    android:drawablePadding="8dp"
                    android:textSize="14sp"
                    android:id="@+id/tv_time"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="#e5e5e5"
            android:layout_marginTop="8dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Date &amp; Time"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Monday 30 April"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="10:00 AM"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#e5e5e5"
            android:layout_marginTop="8dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Address"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="43 Bourke street, Newbridge"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="0.31 mi away"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#e5e5e5"
            android:layout_marginTop="8dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Fee"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Total price, $75"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="For 1 hour"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#e5e5e5"
            android:layout_marginTop="8dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Need"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Treatment"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Heart Treatment"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#e5e5e5"
            android:layout_marginTop="8dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Reminder"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="30 minutes before"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Repeat off"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:insetTop="0dp"
            app:cornerRadius="8dp"
            android:insetBottom="0dp"
            android:text="Cancel"
            android:layout_height="wrap_content"/>




    </LinearLayout>



</ScrollView>