<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/img_profile"
        android:src="@drawable/img_doc_list_1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="100dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:id="@+id/tv_name"
            android:text="Martin Luther"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:id="@+id/tv_distance"
            android:textColor="#b2b2b2"
            android:text="0.31 mi away-Dentist"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:layout_width="80dp"
                android:id="@+id/material_rating"
                android:maxHeight="18dp"
                android:saveEnabled="false"
                android:numStars="5"
                android:stepSize="1"
                android:isIndicator="true"
                app:mrb_progressTint="#FFC969"
                android:layout_alignParentRight="true"
                style="@style/Widget.MaterialRatingBar.RatingBar"
                android:layout_height="28dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="21 reviews"
                android:id="@+id/tv_reviews"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/ic_clock"
            android:text="9:30 AM-2:00 PM"
            android:drawablePadding="8dp"
            android:textSize="14sp"
            android:id="@+id/tv_time"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>

